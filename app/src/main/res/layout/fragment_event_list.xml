<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:padding="16dp"
    android:background="@color/background_main">

    <FrameLayout
        android:id="@+id/flEvents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnAllNotes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/header_page_title"
            android:text="button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/kadwa_bold"
            android:text="@string/event"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="22dp" />
    </FrameLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvEvents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/flEvents"
        android:layout_marginVertical="5dp"
        />

    <FrameLayout
        android:id="@+id/lfEventsComp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rcvEvents"
        android:layout_marginTop="5dp">

        <ImageButton
            android:id="@+id/btnEventsComp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/event_home_button"
            android:text="button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/kadwa_bold"
            android:text="@string/completed_events"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="22dp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/lfEventsComp"
        android:background="@drawable/event_home_button"
        android:padding="10dp">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvEventsComp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginVertical="5dp"
        app:layout_constraintTop_toBottomOf="@id/lfEventsComp"
        />



    </FrameLayout>

    <Button
        android:id="@+id/btnAddEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>