<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/content_yellow"/>

            <corners
                android:radius="10dp"
                />
            <stroke
                android:width="3dp"
                android:color="@color/border_yellow"
                />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/back_yellow"/>

            <corners
                android:radius="10dp"
                />
            <stroke
                android:width="3dp"
                android:color="@color/border_yellow"
            />
        </shape>
    </item>
</selector>